{
    "name": "healthapp/backend",
    "description": "REST API backend for Flutter Health Management App",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "firebase/php-jwt": "^6.4",
        "google/apiclient": "^2.15",
        "monolog/monolog": "^3.4",
        "respect/validation": "^2.2",
        "vlucas/phpdotenv": "^5.5",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "guzzlehttp/guzzle": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "HealthApp\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S localhost:8000 -t public"
    }
}