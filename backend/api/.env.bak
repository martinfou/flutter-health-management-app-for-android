# Application Configuration
APP_NAME="Health App Backend"
APP_ENV=local
APP_DEBUG=false
API_BASE_URL=https://api.healthapp.example.com

# Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=/tmp/health_app.db
# DB_NAME=health_app
# DB_USER=health_app_user
# DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-change-this-in-production-minimum-32-characters

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.healthapp.example.com/api/v1/auth/verify-google

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://healthapp.example.com,https://app.healthapp.example.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_AUTH_REQUESTS=5

# Sync Configuration
SYNC_MAX_BATCH_SIZE=100
SYNC_WINDOW_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/health-app/api.log
LOG_MAX_FILES=30