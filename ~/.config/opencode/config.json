{
  "$schema": "https://opencode.ai/config.json",

  "mcp": {
    "flutter-app": {
      "type": "local",
      "command": ["dart"],
      "args": ["run", "scripts/mcp_server.dart"],
      "enabled": true,
      "env": {
        "DART_FLUTTER_PROJECT_ROOT": "/Volumes/T7/src/ai-recipes/flutter-health-management-app-for-android/app"
      }
    }
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "ollama/llama3:latest": {
          "name": "Llama 3 (Latest)",
          "tools": true
        },
        "ollama/qwen2.5:7b-instruct": {
          "name": "Qwen 2.5 7B Instruct",
          "tools": true
        }
      }
    }
  }
}
